<Page x:Class="Cursach.Страницы.Edit.KindPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cursach.Страницы.Edit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KindPage">

    <StackPanel Background="#FFFCF9F9">
        <Label Content="Название"/>
        <TextBox Text="{Binding EditKind.Title}" Cursor="Pen"/>
        <Button  Command="{Binding SaveKind}" Margin="348,0,283,0" Content="Сохранить" Height="156" Cursor="Hand" FontSize="20" FontFamily="Segoe UI Black"/>

    </StackPanel>
</Page>
