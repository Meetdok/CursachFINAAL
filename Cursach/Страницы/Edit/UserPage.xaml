<Page x:Class="Cursach.Страницы.Edit.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cursach.Страницы.Edit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">
    <StackPanel Background="#FFFCF9F9">
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding EditUser.LastName}" Cursor="Pen"/>
        <Label Content="Номер телефона"/>
        <TextBox Text="{Binding EditUser.PhoneNumber}" Cursor="Pen"/>
        
        
        
        <Button  Command="{Binding SaveUser}" Margin="348,0,283,0" Content="Сохранить" Height="156" Cursor="Hand" FontSize="20" FontFamily="Segoe UI Black"/>

    </StackPanel>
</Page>
